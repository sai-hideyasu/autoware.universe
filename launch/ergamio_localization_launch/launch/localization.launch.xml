<?xml version="1.0"?>
<launch>
  <arg name="pose_source" description="A string consisting of ndt, yabloc, artag and eagleye joined by underscores no matter the order. e.g. ndt_yabloc"/>
  <arg name="twist_source"/>
  <arg name="initial_pose"/>
  <arg name="system_run_mode"/>

  <!-- parameter paths for ndt -->
  <arg name="ndt_scan_matcher/pointcloud_preprocessor/crop_box_filter_measurement_range_param_path"/>
  <arg name="ndt_scan_matcher/pointcloud_preprocessor/voxel_grid_downsample_filter_param_path"/>
  <arg name="ndt_scan_matcher/pointcloud_preprocessor/random_downsample_filter_param_path"/>
  <arg name="ndt_scan_matcher/ndt_scan_matcher_param_path"/>

  <!-- Parameter files -->
  <arg name="vehicle_param_file"/>
  <arg name="localization_error_monitor_param_path"/>
  <arg name="ekf_localizer_param_path"/>
  <arg name="pose_initializer_param_path"/>
  <arg name="eagleye_param_path"/>
  <arg name="ar_tag_based_localizer_param_path"/>
  <arg name="gmps_localizer_param_path"/>
  <arg name="ekf_aichi_localizer_param_path"/>
  <arg name="localizer_mode"/>

  <arg name="input_pointcloud" default="/sensing/lidar/concatenated/pointcloud"/>
  <arg name="localization_pointcloud_container_name" default="/pointcloud_container"/>

  <!-- localization module -->
  <group>
    <push-ros-namespace namespace="localization"/>
    <!-- pose_twist_estimator module -->
    <include file="$(find-pkg-share ergamio_localization_launch)/launch/pose_twist_estimator/pose_twist_estimator.launch.xml">
      <arg name="localization_pointcloud_container_name" value="$(var localization_pointcloud_container_name)"/>
    </include>

    <!-- pose_twist_fusion_filter module -->
    <group>
      <push-ros-namespace namespace="pose_twist_fusion_filter"/>
      <include file="$(find-pkg-share ergamio_localization_launch)/launch/pose_twist_fusion_filter/pose_twist_fusion_filter.launch.xml">
        <arg name="localizer_mode" value="$(var localizer_mode)"/>
      </include>
    </group>

    <!-- ekf_aichi_localizer module -->
    <group>
      <include file="$(find-pkg-share ergamio_localization_launch)/launch/ekf_aichi_localizer/ekf_aichi_localizer.launch.xml">
        <arg name="localizer_mode" value="$(var localizer_mode)"/>
        <arg name="vehicle_param_file" value="$(var vehicle_param_file)"/>
      </include>
    </group>

    <!-- gmps_driver & gmps_localization (磁気マーカー) -->
    <group>
      <push-ros-namespace namespace="gmps_localization"/>
      <include file="$(find-pkg-share kvaser_interface)/launch/kvaser_bridge.launch.xml">
        <arg name="hardware_id" value="130674" />
        <arg name="circuit_id" value="0" />
        <arg name="bit_rate" value="500000" />
      </include>

      <include file="$(find-pkg-share gmps_driver)/launch/gmps_driver.launch.xml">
        <arg name="param_file" value="$(find-pkg-share gmps_driver)/config/gmsp_driver.param.yaml"/>
        <arg name="in_velocity_name" value="/vehicle/status/velocity_status"/>
        <arg name="in_soft_reset_name" value="gmps_soft_reset"/>
        <arg name="in_gmps_can_frame_name" value="can_tx"/>
        <arg name="out_gmps_can_frame_name" value="can_rx"/>
        <arg name="out_gmps_detect_name" value="gmps_detect"/>
        <arg name="out_gmps_error_name" value="gmps_error"/>
      </include>

      <include file="$(find-pkg-share gmps_localizer)/launch/gmps_localizer.launch.xml">
        <arg name="param_file" value="$(find-pkg-share gmps_localizer)/config/gmps_localizer.param.yaml"/>
        <arg name="marker_table_csv_name" value="/home/sit/autoware_rainbow_tier4/src/localization/gmps_driver/DATA/FUKAYA_MGRS_20241122.csv"/>
        <arg name="in_prev_pose_name" value="/localization/ekf_aichi_localization/ekf_aichi_pose_with_covariance"/>
        <arg name="in_gmps_detect_name" value="gmps_detect"/>
        <arg name="in_rfid_name" value="rfid"/>
        <arg name="in_velocity_name" value="/vehicle/status/velocity_status"/>
        <arg name="out_gmps_pose_name" value="gmps_pose_cov"/>
        <arg name="out_gmps_log_name" value="gmps_log"/>
      </include>
    </group>

    <!-- localization_error_monitor_module -->
    <group>
      <include file="$(find-pkg-share ergamio_localization_launch)/launch/localization_error_monitor/localization_error_monitor.launch.xml"/>
    </group>
  </group>
</launch>
